{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,

  "properties": {
    "fullNameOverride": { "type": "string" },
    "nameOverride": { "type": "string" },

    "extraDeploymentLabels": { "$ref": "#/$defs/labels" },
    "deploymentAnnotations": { "$ref": "#/$defs/annotations" },
    "replicas": { "type": ["null", "integer"] },

    "extraPodLabels": { "$ref": "#/$defs/labels" },
    "podAnnotations": { "$ref": "#/$defs/annotations" },
    "affinity": { "type": "object" },
    "imagePullSecrets": { "type": "array" },
    "nodeSelector": { "type": "object" },
    "podSecurityContext": { "type": "object" },
    "tolerations": { "type": "array" },

    "resources": { "type": "object" },
    "securityContext": { "type": "object" },
    "image": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "repository": { "type": "string" },
        "pullPolicy": { "type": "string" }
      }
    },

    "rbac": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "create": { "type": "boolean" },
        "extraClusterRoleLabels": { "$ref": "#/$defs/labels" },
        "clusterRoleAnnotations": { "$ref": "#/$defs/annotations" },
        "extraClusterRoleBindingLabels": { "$ref": "#/$defs/labels" },
        "clusterRoleBindingAnnotations": { "$ref": "#/$defs/annotations" }
      }
    },

    "serviceAccount": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "create": { "type": "boolean" },
        "name": { "type": "string" },
        "extraLabels": { "$ref": "#/$defs/labels" },
        "annotations": { "$ref": "#/$defs/annotations" }
      }
    }
  },

  "$defs": {
    "annotations": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },
    "labels": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    }
  }
}
