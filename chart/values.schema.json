{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,

  "properties": {
    "fullNameOverride": { "type": "string" },
    "nameOverride": { "type": "string" },

    "extraDeploymentLabels": { "type": "object" },
    "deploymentAnnotations": { "type": "object" },
    "replicas": {},

    "extraPodLabels": { "type": "object" },
    "podAnnotations": { "type": "object" },
    "affinity": { "type": "object" },
    "imagePullSecrets": { "type": "array" },
    "nodeSelector": { "type": "object" },
    "podSecurityContext": { "type": "object" },
    "tolerations": { "type": "array" },

    "resources": { "type": "object" },
    "securityContext": { "type": "object" },
    "image": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "repository": { "type": "string" },
        "pullPolicy": { "type": "string" }
      }
    },

    "rbac": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "create": { "type": "boolean" },
        "extraClusterRoleLabels": { "type": "object" },
        "clusterRoleAnnotations": { "type": "object" },
        "extraClusterRoleBindingLabels": { "type": "object" },
        "clusterRoleBindingAnnotations": { "type": "object" }
      }
    },

    "serviceAccount": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "create": { "type": "boolean" },
        "name": { "type": "string" },
        "extraLabels": { "type": "object" },
        "annotations": { "type": "object" }
      }
    }
  }
}
